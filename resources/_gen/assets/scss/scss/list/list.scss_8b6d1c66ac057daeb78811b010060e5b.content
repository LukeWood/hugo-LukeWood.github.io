.list-container{width:100%;display:flex;align-items:center;justify-content:space-around}.list-content{display:flex;justify-content:space-around;color:var(--text_color);width:100%;text-align:center;padding:1rem;min-height:100%}.post-year{display:flex;flex-direction:row}a.list-link{text-decoration:none}.post-item{font-size:1.4rem;word-wrap:normal;text-align:left;text-decoration:none;display:flex;flex-direction:row;align-items:stretch;justify-content:space-between;border-bottom:dashed 1px var(--text_color)}.post-item:hover{border-bottom:dashed 1px var(--text_color_dark)}.post-item .post-title{text-decoration:none}.post-item .post-day{margin-left:2rem;text-decoration:none}.post-year{color:var(--primary_color)}.post-year ul{list-style:none;margin:0;padding:0}.post-year h1{color:var(--primary_color)}@media screen and (max-width: 48rem){.post-year h1{display:none}}ol li a{color:var(--secondary_color)}